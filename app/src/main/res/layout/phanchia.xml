<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999999"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ImageView-->
            <!--android:id="@+id/backround"-->
            <!--android:layout_below="@id/tieude"-->
            <!--android:background="@drawable/abc"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <TextView
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:id="@+id/tieudepc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your level"
            android:textSize="33dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
        <Button
            android:id="@+id/chauluc"
            android:background="@drawable/sty1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/tieudepc"
            android:layout_centerHorizontal="true"
            android:text="Level Continent"
            android:textSize="25dp"
            android:layout_marginTop="0.7in"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/aa"

            />

        <Button
            android:id="@+id/thegioi"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:text="Level All World"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/chauluc"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/cup"
            android:background="@drawable/sty1"
            />

        <Button
            android:id="@+id/back"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:drawableLeft="@drawable/qq"
            android:text="Back"
            android:textAllCaps="false"
            android:background="@drawable/sty1"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>