<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999999"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backround"
            android:layout_below="@id/tieude"
            android:background="@drawable/abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:id="@+id/tieude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flag of the World Quiz"
            android:textSize="33dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
        <Button
            android:id="@+id/btbatdau"
            android:background="@drawable/sty1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/tieude"
            android:layout_centerHorizontal="true"
            android:text="Start"
            android:textSize="25dp"
            android:layout_marginTop="0.7in"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/aa"

            />
        <Button

            android:id="@+id/bthuongdan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Guide"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/mn"
            android:background="@drawable/mybutton"/>
        <Button
            android:id="@+id/btdiemcao"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:text="High score"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btbatdau"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/cup"
            android:background="@drawable/sty1"
            />
        <Button
            android:textAllCaps="false"
            android:id="@+id/btthoat"
            android:text="Exit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/nb"
            android:background="@drawable/mybutton"
            />
        <Button
            android:id="@+id/btgiaitri"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:text="Relax"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btdiemcao"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/cup"
            android:background="@drawable/sty1"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btbatdau"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="130dp"
            android:text="ntdh" />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>