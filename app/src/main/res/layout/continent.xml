<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999999"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:id="@+id/tieude1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Continent"
            android:textSize="33dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
        <Button
            android:id="@+id/asian"
            android:background="@drawable/sty1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/AUOC"
            android:layout_marginStart="20dp"
            android:text="Asian"
            android:textSize="25dp"
            android:layout_marginTop="0.2in"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/aa"

            />
        <Button
            android:id="@+id/africa"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:text="Africa"
            android:layout_marginStart="20dp"
            android:layout_below="@id/asian"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/cup"
            android:background="@drawable/sty1"
            />

        <Button
            android:id="@+id/europe"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:text="Europe"
            android:layout_marginStart="20dp"
            android:layout_below="@id/africa"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/cup"
            android:background="@drawable/sty1"
            />
        <Button
            android:id="@+id/northAM"
            android:background="@drawable/sty1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/AUOC"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="North America"
            android:textSize="25dp"
            android:layout_marginTop="0.2in"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/aa"

            />
        <Button
            android:id="@+id/southAM"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:text="South America"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/asian"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/cup"
            android:background="@drawable/sty1"
            />

        <Button
            android:id="@+id/AUOC"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:text="Australia and Oceania"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tieude1"
            android:layout_marginTop="0.2in"
            android:textAllCaps="false"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/cup"
            android:background="@drawable/sty1"
            />
        <Button
            android:textAllCaps="false"
            android:id="@+id/back"
            android:textSize="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/next"
            android:background="@drawable/sty1"
            />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>